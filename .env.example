# OpenASP AX Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ofasp
DB_USER=aspuser
DB_PASSWORD=your_password_here

# PostgreSQL for catalog system
POSTGRES_USER=aspuser
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=ofasp

# Service Ports
PORT=3000                    # SMED Map Viewer
FLASK_PORT=3003             # Python EBCDIC Service
ASPMGR_WEB_PORT=3004        # System API Server
REACT_APP_PORT=3005         # OpenASP Refactor
CHAT_API_PORT=3006          # Chat API Server
ASP_MANAGER_PORT=3007       # ASP Manager
ASP_MANAGER_BACKEND=3008    # ASP Manager Backend
API_SERVER_PORT=8000        # Main API Server

# Ollama Configuration
OLLAMA_HOST=http://0.0.0.0:3014
OLLAMA_URL=http://localhost:3014
OLLAMA_MODELS=/home/aspuser/.ollama/models

# Path Configuration
CODEPAGE_BASE_PATH=/home/aspuser/app/ofasp-refactor/public/codepages
RAG_DIRECTORY=/home/aspuser/app/ofasp-refactor/public/RAG

# API URLs
REACT_APP_PYTHON_CONVERTER_URL=http://localhost:3003
REACT_APP_BASE_URL=http://localhost:3005
REACT_APP_ASP_MANAGER_URL=http://localhost:3007

# System Configuration
NODE_ENV=development
SYSTEM_DEBUG=false
SYSTEM_ENCODING=sjis
SYSTEM_TERMINAL_DEFAULT=webui

# WebSocket Configuration
WEBSOCKET_TIMEOUT=86400

# dslock_suite Configuration
DSLOCK_TTL_SEC=3600
DSLOCK_DB=/tmp/dslock.jsonl
DSLOCK_LOG=1

# Logging
LOG_LEVEL=INFO
EBCDIC_CONVERTER_LOG_LEVEL=INFO