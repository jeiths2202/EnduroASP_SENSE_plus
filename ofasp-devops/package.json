{
  "name": "ofasp-devops",
  "version": "1.0.0",
  "description": "OpenASP AX DevOps - Development, Conversion & Transformation Platform for CI/CD Demo",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3016",
    "build": "next build",
    "start": "next start -p 3016",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t ofasp-devops .",
    "docker:run": "docker run -p 3016:3016 ofasp-devops",
    "ci:pipeline": "npm run lint && npm run type-check && npm run test && npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "axios": "^1.6.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.32",
    "jest": "^29.0.0",
    "postcss": "^8.0.0"
  },
  "keywords": [
    "openaspax",
    "devops",
    "ci-cd",
    "cobol-conversion",
    "legacy-modernization",
    "ibm-as400"
  ]
}
